<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="report_l10nbevatdeclaration">
    <t t-call="web.html_container">
      <t t-set="data_report_margin_top" t-value="20"/>
      <t t-call="l10n_be_coa_multilang.l10n_be_layout">

        <div class="page">
          <h3>Periodical VAT Declaration</h3>

          <div class="row mt32 mb32">
            <div class="col-xs-3">
              <strong>Company Name</strong>
              <p t-esc="res_company.name"/>
            </div>
            <div class="col-xs-3">
              <strong>Vat Number</strong>
              <p t-esc="res_company.vat"/>
            </div>
            <div class="col-xs-3">
              <strong>Period</strong>
              <p t-esc="docs.period"/>
            </div>
          </div>

          <table class="table table-condensed" width="100%">
            <thead>
              <tr>
                <th width="68%"/>
                <th width="32%" class="text-right">Amount</th>
              </tr>
            </thead>
            <tbody>
              <tr t-foreach="docs.case_ids" t-as="c">
                <t t-set="padleft" t-value="'padding-left:' + str(20 * (c.level)) + 'px;'"/>
                <t t-set="case" t-value="' - '.join([c.case_id.code, c.case_id.name])"/>
                <td>
                  <span t-esc="case" t-att-style="padleft"/>
                </td>
                <td class="text-right">
                  <span t-field="c.amount"/>
                </td>
              </tr>
            </tbody>
          </table>

        </div>

      </t>
    </t>
  </template>

</odoo>
