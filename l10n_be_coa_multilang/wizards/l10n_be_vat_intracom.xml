<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="l10n_be_vat_intracom_view_form" model="ir.ui.view">
    <field name="name">Intracom VAT Declaration</field>
    <field name="model">l10n.be.vat.intracom</field>
    <field name="priority" eval="2"/>
    <field name="arch" type="xml">
      <form string="Intracom VAT Declaration">
        <group name="selection_criteria">
          <field name="company_id"
                 options="{'no_create': True, 'no_open': True}"
                 groups="base.group_multi_company"/>
          <field name="declarant_id"/>
          <field name="year"/>
          <field name="period_length" required="1"/>
          <field name="month"
                 attrs="{'required': [('period_length', '=', 'month')], 'invisible': [('period_length', '!=', 'month')]}"/>
          <field name="quarter"
                 attrs="{'required': [('period_length', '=', 'quarter')], 'invisible': [('period_length', '!=', 'quarter')]}"/>
        </group>
        <group name="date_range" invisible="1">
          <field name="date_from"/>
          <field name="date_to"/>
          <field name="period"/>
        </group>
        <footer>
          <button name="generate_declaration" string="View Declaration" type="object" class="oe_highlight"/>
          or
          <button string="Cancel" class="oe_link" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="l10n_be_vat_intracom_view_form_declaration" model="ir.ui.view">
    <field name="name">Intracom VAT Declaration</field>
    <field name="model">l10n.be.vat.intracom</field>
    <field name="priority" eval="1"/>
    <field name="arch" type="xml">
      <form string="Intracom VAT Declaration">
        <header>
          <button name="create_xml" string="Create XML" type="object" class="oe_highlight"/>
          <button name="create_xls" string="Export" type="object" class="oe_highlight"/>
          <button name="print_declaration" string="Print" type="object" class="oe_highlight"/>
        </header>
        <group name="selection_criteria" colspan="4" col="6">
          <field name="period"/>
          <field name="company_id"
                 options="{'no_create': True, 'no_open': True}"
                 readonly="1"
                 groups="base.group_multi_company"/>
        </group>
        <notebook>
          <page name="declaration" string="Intracom VAT Declaration">
            <field name="client_ids" nolabel="1" readonly="1">
              <tree string="Intracom VAT Declaration">
                <field name="vat"/>
                <field name="partner_id"/>
                <field name="code"/>
                <field name="amount" sum="Total Amount"/>
                <button name="view_move_lines" type="object"
                        string="Journal Items"
                        icon="fa-search-plus"/>
              </tree>
              <form string="Intracom VAT Declaration">
                <group colspan="4" col="4">
                  <field name="vat"/>
                  <field name="partner_id" options="{'no_create_edit': True}"/>
                  <field name="code"/>
                  <field name="amount"/>
                </group>
              </form>
            </field>
          </page>
          <page name="comments" string="Comments">
            <group>
              <label string="Comments to be Added to the Declaration" colspan="2"/>
              <field name="comments" nolabel="1"/>
            </group>
          </page>
        </notebook>
      </form>
    </field>
  </record>

  <record id="l10n_be_vat_intracom_action" model="ir.actions.act_window">
    <field name="name">Intracom VAT Declaration</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">l10n.be.vat.intracom</field>
    <field name="view_type">form</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="l10n_be_vat_intracom_view_form"/>
    <field name="target">new</field>
  </record>

  <menuitem id="l10n_be_vat_intracom_menu"
            name="Intracom VAT Declaration"
            parent="menu_belgian_statements_and_reports"
            action="l10n_be_vat_intracom_action"
            sequence="20"/>

  <report id="action_report_l10nbevatintracom"
          model="l10n.be.vat.intracom"
          string="Intracom VAT Declaration"
          report_type="qweb-pdf"
          name="l10n_be_coa_multilang.report_l10nbevatintracom"
          file="l10n_be_coa_multilang.report_l10nbevatintracom"
          menu="False"/>

</odoo>
